---
import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
import '../styles/global.css';
import { getPath } from '../utils/path.js';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "DocScrub - Privacy-First Document Redaction Tool",
  description = "A browser-based document redaction tool that keeps your sensitive information private. No server processing, no data collection." 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={getPath('/favicon.svg')} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={import.meta.env.SITE} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={import.meta.env.SITE} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen flex flex-col bg-gray-50 text-gray-800 font-sans">
    <Header />
    
    <div class="flex-grow">
      <slot />
    </div>
    
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --color-primary-50: rgb(242, 248, 255);
    --color-primary-100: rgb(230, 241, 255);
    --color-primary-500: rgb(99, 102, 241);
    --color-primary-600: rgb(79, 70, 229);
    --color-primary-700: rgb(67, 56, 202);
  }
  
  html {
    font-family: 'Inter', system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    padding: 0;
  }
  
  /* Improve focus styles for accessibility */
  :focus {
    outline: 2px solid var(--color-primary-500);
    outline-offset: 2px;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #c1c1c1;
    border-radius: 10px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #a1a1a1;
  }
  
  /* Transition styles */
  .fade-in {
    animation: fadeIn 0.3s ease-in;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style>
